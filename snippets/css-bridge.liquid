{% style %}
  :root {
    --payment-button-height: 48px;
    --checkout-button-height: 48px;
    --section-x-padding: 1.25rem;
    --grid-gap: 1.25rem;
    --icon-thickness: {{ settings.icon_thickness }};
    --header-height: 60px;
    --global-scrolling-items-speed-multiplier: 1;
    --transparent: transparent;

    --section-border-color: {{ settings.section_border_color.red }}, {{ settings.section_border_color.green }}, {{ settings.section_border_color.blue }};
    --section-border-thickness: {% if settings.show_border_between_sections %}{{ settings.section_border_thickness }}px{% else %}0px{% endif %};
    --shape-divider-offset: {% if settings.show_border_between_sections %}{{ settings.section_border_thickness | plus: 2 }}px{% else %}2px{% endif %};

    --button-border-radius: {{ settings.button_border_radius }};
    --textarea-border-radius: {% if settings.button_border_radius == '9999px' %}1rem{% else %}{{ settings.button_border_radius }}{% endif %};
    --button-border-width: {{ settings.button_border_width }}{% if settings.button_border_width > 0 %}px{% endif %};
    --input-border-width: {% if settings.button_border_width > 0 %}{{ settings.button_border_width }}px{% else %}1px{% endif %};
    --button-shadow-border-width: {% if settings.button_show_border_on_shadow %}var(--button-border-width){% else %}0{% endif %};
    --button-text-transform: {% if settings.button_uppercase %}uppercase{% else %}none{% endif %};
    --button-drop-shadow-size:  {{ settings.button_drop_shadow_size }}{% if settings.button_drop_shadow_size > 0 %}px{% else %}0px{% endif %};
    --button-drop-shadow-top-size: {% if settings.button_shadow_direction contains 'top' %}-{% endif %}{{ settings.button_drop_shadow_size }}px;
    --button-drop-shadow-left-size: {% if settings.button_shadow_direction contains 'left' %}-{% endif %}{% if settings.button_shadow_direction == 'bottom' or settings.button_shadow_direction == 'top' %}0px{% else %}{{ settings.button_drop_shadow_size }}px{% endif %};
    --button-hover-top-size: {% if settings.button_drop_shadow_size > 0 %}{% if settings.button_shadow_direction contains 'top' %}-{% endif %}{{ settings.button_drop_shadow_size }}px{% else %}0px{% endif %};
    --button-hover-left-size: var(--button-drop-shadow-left-size);
    --button-shadow-display: {% if settings.button_drop_shadow_size > 0 %}block{% else %}none{% endif %};
    --sticker-border-radius: {{ settings.sticker_border_radius }};
    --sticker-border-width: {{ settings.sticker_border_width }}{% if settings.sticker_border_width > 0 %}px{% endif %};
    --sticker-shadow-border-width: {% if settings.sticker_show_border_on_shadow %}var(--sticker-border-width){% else %}0{% endif %};
    --sticker-text-transform: {% if settings.stickers_uppercase %}uppercase{% else %}none{% endif %};
    --sticker-drop-shadow-top-size: {% if settings.sticker_shadow_direction contains 'top' %}-{% endif %}{{ settings.sticker_drop_shadow_size }}px;
    --sticker-drop-shadow-left-size: {% if settings.sticker_shadow_direction contains 'left' %}-{% endif %}{% if settings.sticker_shadow_direction == 'bottom' or settings.sticker_shadow_direction == 'top' %}0{% else %}{{ settings.sticker_drop_shadow_size }}px{% endif %};
    --sticker-drop-shadow-display: {% if settings.sticker_drop_shadow_size > 0 %}block{% else %}none{% endif %};
    --card-border-radius: {{ settings.card_border_radius }};
    --card-drop-shadow-size: {{ settings.card_drop_shadow_size }}px;
    --card-drop-shadow-top-size: {% if settings.card_shadow_direction contains 'top' %}-{% endif %}{{ settings.card_drop_shadow_size }}px;
    --card-drop-shadow-left-size: {% if settings.card_shadow_direction contains 'left' %}-{% endif %}{% if settings.card_shadow_direction == 'bottom' or settings.card_shadow_direction == 'top' %}0{% else %}{{ settings.card_drop_shadow_size }}px{% endif %};
    --card-border-width: {{ settings.card_border_width }}{% if settings.card_border_width > 0 %}px{% endif %};
    --card-shadow-border-width: {% if settings.card_show_border_on_shadow %}var(--card-border-width){% else %}0{% endif %};
    --media-border-radius: {{ settings.media_border_radius }};
    --media-drop-shadow-display: {% if settings.media_drop_shadow_size > 0 %}block{% else %}none{% endif %};
    --media-drop-shadow-size: {{ settings.media_drop_shadow_size }}px;
    --media-drop-shadow-top-size: {% if settings.media_shadow_direction contains 'top' %}-{% endif %}{{ settings.media_drop_shadow_size }}px;
    --media-drop-shadow-left-size: {% if settings.media_shadow_direction contains 'left' %}-{% endif %}{% if settings.media_shadow_direction == 'bottom' or settings.media_shadow_direction == 'top' %}0{% else %}{{ settings.media_drop_shadow_size }}px{% endif %};
    --media-drop-shadow-size-half: {{ settings.media_drop_shadow_size | divided_by: 2.0 }}px;
    --media-drop-shadow-top-size-half: {% if settings.media_shadow_direction contains 'top' %}-{% endif %}{{ settings.media_drop_shadow_size | divided_by: 2.0 }}px;
    --media-drop-shadow-left-size-half: {% if settings.media_shadow_direction contains 'left' %}-{% endif %}{% if settings.media_shadow_direction == 'bottom' or settings.media_shadow_direction == 'top' %}0{% else %}{{ settings.media_drop_shadow_size | divided_by: 2.0 }}px{% endif %};
    --media-border-width: {{ settings.media_border_width }}{% if settings.media_border_width > 0 %}px{% endif %};
    --media-shadow-border-width: {% if settings.media_show_border_on_shadow %}var(--media-border-width){% else %}0{% endif %};
    --heading-shadow-spread: {{ settings.heading_drop_shadow_spread }}px;
    --heading-stroke-thickness: {{ settings.heading_stroke_thickness }}px;
    --product-tiles-text-transform: {% if settings.product_tile_uppercase %}uppercase{% else %}none{% endif %};
    --general-border-width: {{ settings.general_border_width }}px;

    {%- if settings.general_border_width > 4 %}
    --chart-height: 1rem;
    {%- elsif settings.general_border_width > 3  -%}
    --chart-height: 0.75rem;
    {%- else -%}
    --chart-height: 0.5rem;
    {%- endif -%}

    --hover-effect-zoom-media: {% if settings.hover_effect_zoom_media %}1.3{% else %}1{% endif %};
    --hover-effect-enlarge-shape: {% if settings.hover_effect_enlarge_shape %}1.1{% else %}1{% endif %};
    --hover-effect-lift-shape: {% if settings.hover_effect_lift_shape %}-{{ settings.hover_effect_lift_level }}rem{% else %}0{% endif %};
    --hover-effect-rotate-shape: {% if settings.hover_effect_rotate_shape %}{{ settings.hover_effect_rotate_level }}deg{% else %}0deg{% endif %};
  }

  {% for scheme in settings.color_schemes -%}
    {%- liquid
      if settings.secondary_button_color == 'match_background'
        assign color_scheme_secondary_text = 'var(--color-scheme-text)'
        assign color_scheme_secondary_background = 'var(--color-scheme-background)'
      else
        assign color_scheme_secondary_text = 'var(--color-scheme-card-text)'
        assign color_scheme_secondary_background = 'var(--color-scheme-card)'
      endif
    -%}

    {% capture color_scheme_select_svg %}
      url("data:image/svg+xml,%3Csvg width='48' height='48' viewBox='0 0 48 48' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 12L23.2826 36.0527C23.3724 36.1542 23.4826 36.2354 23.6062 36.291C23.7297 36.3467 23.8636 36.3755 23.999 36.3755C24.1345 36.3755 24.2684 36.3467 24.3919 36.291C24.5154 36.2354 24.6257 36.1542 24.7155 36.0527L46 12' stroke='{% if settings.secondary_button_color == 'match_background' %}{{ scheme.settings.text | replace: '#', '%23' }}{% else %}{{ scheme.settings.card_text | replace: '#', '%23' }}{% endif %}' stroke-width='{{ settings.icon_thickness }}' stroke-linecap='round' stroke-linejoin='round' vector-effect='non-scaling-stroke'/%3E%3C/svg%3E%0A")
    {% endcapture %}

    {% if forloop.index == 1 -%}
      :root,
    {% endif %}
    [data-color-scheme="{{ scheme.id }}"] {
      --color-scheme-text: {{ scheme.settings.text.red }}, {{ scheme.settings.text.green }}, {{ scheme.settings.text.blue }};
      --color-scheme-text-contrast: {{ scheme.settings.text_contrast.red }}, {{ scheme.settings.text_contrast.green }}, {{ scheme.settings.text_contrast.blue }};
      --color-scheme-background: {{ scheme.settings.background.red }}, {{ scheme.settings.background.green }}, {{ scheme.settings.background.blue }};
      --color-scheme-accent-1: {{ scheme.settings.accent_1.red }}, {{ scheme.settings.accent_1.green }}, {{ scheme.settings.accent_1.blue }};
      --color-scheme-accent-1-contrast: {{ scheme.settings.accent_1_contrast.red }}, {{ scheme.settings.accent_1_contrast.green }}, {{ scheme.settings.accent_1_contrast.blue }};
      --color-scheme-accent-2: {{ scheme.settings.accent_2.red }}, {{ scheme.settings.accent_2.green }}, {{ scheme.settings.accent_2.blue }};
      --color-scheme-accent-2-contrast: {{ scheme.settings.accent_2_contrast.red }}, {{ scheme.settings.accent_2_contrast.green }}, {{ scheme.settings.accent_2_contrast.blue }};
      --color-scheme-card-text: {{ scheme.settings.card_text.red }}, {{ scheme.settings.card_text.green }}, {{ scheme.settings.card_text.blue }};
      --color-scheme-card: {{ scheme.settings.card.red }}, {{ scheme.settings.card.green }}, {{ scheme.settings.card.blue }};
      --color-scheme-gradient: {{ scheme.settings.gradient }};
      --color-scheme-secondary-background: {{ color_scheme_secondary_background }};
      --color-scheme-secondary-text: {{ color_scheme_secondary_text }};
      --select-svg: {{ color_scheme_select_svg }};
    }

    /* unique values for each scheme */
    :root {
      --color-scheme-{{ scheme.id }}-text: {{ scheme.settings.text.red }} {{ scheme.settings.text.green }} {{ scheme.settings.text.blue }};
      --color-scheme-{{ scheme.id }}-text-contrast: {{ scheme.settings.text_contrast.red }}, {{ scheme.settings.text_contrast.green }}, {{ scheme.settings.text_contrast.blue }};
      --color-scheme-{{ scheme.id }}-background: {{ scheme.settings.background.red }}, {{ scheme.settings.background.green }}, {{ scheme.settings.background.blue }};
      --color-scheme-{{ scheme.id }}-accent-1: {{ scheme.settings.accent_1.red }}, {{ scheme.settings.accent_1.green }}, {{ scheme.settings.accent_1.blue }};
      --color-scheme-{{ scheme.id }}-accent-1-contrast: {{ scheme.settings.accent_1_contrast.red }}, {{ scheme.settings.accent_1_contrast.green }}, {{ scheme.settings.accent_1_contrast.blue }};
      --color-scheme-{{ scheme.id }}-accent-2: {{ scheme.settings.accent_2.red }}, {{ scheme.settings.accent_2.green }}, {{ scheme.settings.accent_2.blue }};
      --color-scheme-{{ scheme.id }}-accent-2-contrast: {{ scheme.settings.accent_2_contrast.red }}, {{ scheme.settings.accent_2_contrast.green }}, {{ scheme.settings.accent_2_contrast.blue }};
      --color-scheme-{{ scheme.id }}-card-text: {{ scheme.settings.card_text.red }}, {{ scheme.settings.card_text.green }}, {{ scheme.settings.card_text.blue }};
      --color-scheme-{{ scheme.id }}-card: {{ scheme.settings.card.red }}, {{ scheme.settings.card.green }}, {{ scheme.settings.card.blue }};
      --color-scheme-{{ scheme.id }}-gradient: {{ scheme.settings.gradient }};
      --color-scheme-{{ scheme.id }}-secondary-background: {{ color_scheme_secondary_background }};
      --color-scheme-{{ scheme.id }}-secondary-text: {{ color_scheme_secondary_text }};
      --color-scheme-{{ scheme.id }}-select-svg: {{ color_scheme_select_svg }};
    }
  {%- endfor -%}

  {%  liquid
    if settings.selected_text_background_color == 'accent_1'
      assign selected_text_color = 'var(--color-scheme-accent-1-contrast)'
      assign selected_text_background_color = 'var(--color-scheme-accent-1)'
    elsif settings.selected_text_background_color == 'accent_2'
      assign selected_text_color = 'var(--color-scheme-accent-2-contrast)'
      assign selected_text_background_color = 'var(--color-scheme-accent-2)'
    else
      assign selected_text_color = 'var(--color-scheme-background)'
      assign selected_text_background_color = 'var(--color-scheme-text)'
    endif
  %}

  ::selection {
    background-color: rgb({{ selected_text_background_color }});
    color: rgb({{ selected_text_color }});
  }

  {% if settings.secondary_button_color == 'match_background' %}
    .card {
      --color-scheme-secondary-background: var(--color-scheme-card);
      --color-scheme-secondary-text: var(--color-scheme-card-text);
    }
  {% endif %}


  [data-color-scheme] {
    --color-heading-shadow: var(--{{ settings.heading_drop_shadow_color }});
    --color-heading-stroke: var(--{{ settings.heading_stroke_color }});
    --color-button-background: var(--color-scheme-{{ settings.button_color }});
    --color-button-text: var(--color-scheme-{{ settings.button_color }}-contrast);
    --color-button-border: var(--color-scheme-text);
    --color-button-shadow: var(--{{ settings.button_shadow_color }});
    --color-card-border: var(--{{ settings.card_border_color }});
    --color-card-shadow: var(--{{ settings.card_shadow_color }});
    --color-sticker-border: var(--{{ settings.sticker_border_color }});
    --color-sticker-shadow: var(--{{ settings.sticker_shadow_color }});
    --color-media-border: var(--{{ settings.media_border_color }});
    --color-media-shadow: var(--{{ settings.media_shadow_color }});
    --color-media-shadow-fill: rgb(var(--{{ settings.media_shadow_color }}));
    --color-sticker-shadow: var(--{{ settings.sticker_shadow_color }});
    --color-sticker-shadow-fill: rgb(var(--{{ settings.sticker_shadow_color }}));
    {%- if settings.sticker_shadow_color == 'transparent' -%}
      --color-sticker-shadow-fill: none;
    {%- endif -%}
    {%- if settings.media_shadow_color == 'transparent' -%}
      --color-media-shadow-fill: none;
    {%- endif -%}
    --heading-color: var(--{{ settings.heading_color }});
    --heading-italics-color: var(--{{ settings.heading_italics_color }});
    --heading-text-shadow:
      {%- if settings.heading_drop_shadow_style == 'full_shadow' -%}
      {%- for i in (1..settings.heading_drop_shadow_size) -%}
      {{ i | divided_by: 100.0 }}em {{ i | divided_by: 100.0 }}em 0 rgb(var(--color-heading-shadow))
      {%- if forloop.last -%};{%- else -%},{%- endif -%}
      {%- endfor -%}
      {%- endif -%}
      {%- if settings.heading_drop_shadow_style == 'drop_shadow' -%}
        {{ settings.heading_drop_shadow_size | divided_by: 100.0 }}em {{ settings.heading_drop_shadow_size | divided_by: 100.0 }}em 0 rgb(var(--color-heading-shadow));
      {%- endif -%}
    --payment-terms-background-color: rgb(var(--color-scheme-background));

    {%  if settings.button_drop_shadow_size == 0 -%}
      --color-button-background-hover: var(--color-scheme-{{ settings.button_hover_background_color }});
      --color-button-text-hover: var(--color-scheme-{{ settings.button_hover_background_color }}-contrast);
      --color-button-border-hover: var(--color-scheme-{{ settings.button_hover_border_color }});
      --color-button-secondary-text-hover: var(--color-scheme-{{ settings.secondary_button_hover_background_color }}-contrast);
      --color-button-secondary-background-hover: var(--color-scheme-{{ settings.secondary_button_hover_background_color }});
    {%- else -%}
      --color-button-background-hover: var(--color-button-background);
      --color-button-text-hover: var(--color-button-text);
      --color-button-border-hover: var(--color-scheme-text);
      --color-button-secondary-text-hover: var(--color-scheme-secondary-text);
      --color-button-secondary-background-hover: var(--color-scheme-secondary-background);
    {%- endif -%}
  }

  /*
  Typography and spacing sizes
  */
  {%- liquid
    assign vertical_spacing_between_sections = settings.vertical_spacing_between_sections | split: ":"
  -%}
  :root {
    --base-font-size: {{ settings.base_font_size | times: 6.25 }}%;
    --base-line-height: {{ settings.base_line_height }};
    --heading-line-height: {{ settings.heading_line_height }};

    --font-size-ratio-xs: 0.7491535;
    --font-size-ratio-sm: 0.8908985;
    --font-size-ratio-base: 1;
    --font-size-ratio-lg: 1.33484;
    --font-size-ratio-xl: 1.498307;
    --font-size-ratio-2xl: 1.681793;
    --font-size-ratio-3xl: 2;
    --font-size-ratio-4xl: 2.66968;
    --font-size-ratio-5xl: 2.996614;
    --font-size-ratio-6xl: 3.563594;
    --font-size-ratio-7xl: 4;
    --font-size-ratio-8xl: 4.519842;
    --font-size-ratio-9xl: 4.996614;
    --font-size-ratio-10xl: 5.563594;

    --font-size-xs: calc(var(--font-size-ratio-xs) * 1rem);
    --font-size-sm: calc(var(--font-size-ratio-sm) * 1rem);
    --font-size-base: calc(var(--font-size-ratio-base) * 1rem);
    --font-size-lg: calc(var(--font-size-ratio-lg) * 1rem);
    --font-size-xl: calc(var(--font-size-ratio-xl) * 1rem);
    --font-size-2xl: calc(var(--font-size-ratio-2xl) * 1rem);
    --font-size-3xl: calc(var(--font-size-ratio-3xl) * 1rem);
    --font-size-4xl: calc(var(--font-size-ratio-4xl) * 1rem);
    --font-size-5xl: calc(var(--font-size-ratio-5xl) * 1rem);
    --font-size-6xl: calc(var(--font-size-ratio-6xl) * 1rem);
    --font-size-7xl: calc(var(--font-size-ratio-7xl) * 1rem);
    --font-size-8xl: calc(var(--font-size-ratio-8xl) * 1rem);
    --font-size-9xl: calc(var(--font-size-ratio-9xl) * 1rem);
    --font-size-10xl: calc(var(--font-size-ratio-10xl) * 1rem);

    --type-scale-n-2: var(--font-size-xs);
    --type-scale-n-1: var(--font-size-sm);
    --type-scale-n0: var(--font-size-base);
    --type-scale-n1: var(--font-size-lg);
    --type-scale-n2: var(--font-size-xl);
    --type-scale-n3: var(--font-size-2xl);
    --type-scale-n4: var(--font-size-3xl);
    --type-scale-n5: var(--font-size-4xl);
    --type-scale-n6: var(--font-size-5xl);
    --type-scale-n7: var(--font-size-6xl);
    --type-scale-n8: var(--font-size-7xl);
    --type-scale-n9: var(--font-size-8xl);
    --type-scale-n10: var(--font-size-9xl);
    --type-scale-n11: var(--font-size-10xl);

    --standard-heading-size: var(--type-scale-n{{ settings.mobile_standard_heading_scale }});
    --feature-heading-size: var(--type-scale-n{{ settings.mobile_feature_heading_scale }});
    --secondary-heading-size: var(--type-scale-n{{ settings.mobile_secondary_heading_scale }});

    --section-vertical-spacing: {{ vertical_spacing_between_sections[0] }};

    {%- if settings.button_font == 'heading' -%}
      --button-font-stack: var(--heading-font-stack);
      --button-font-weight: var(--heading-font-weight);
      --button-font-style: var(--heading-font-style);
      --button-letter-spacing: var(--heading-letterspacing);
    {%- else -%}
      --button-font-stack: var(--main-font-stack);
      --button-font-weight: var(--main-font-weight);
      --button-font-style: var(--main-font-style);
      --button-letter-spacing: inherit;
    {%- endif -%}
  }

  shopify-accelerated-checkout,
  shopify-accelerated-checkout-cart {
    --shopify-accelerated-checkout-button-box-shadow: {% if settings.button_drop_shadow_size > 0 %}var(--button-drop-shadow-left-size) var(--button-drop-shadow-top-size) 0 rgb(var(--color-button-shadow)){% else %}none{% endif %};
  }

  @media (min-width: 990px) {
    :root {
      --standard-heading-size: var(--type-scale-n{{ settings.desktop_standard_heading_scale }});
      --feature-heading-size: var(--type-scale-n{{ settings.desktop_feature_heading_scale }});
      --secondary-heading-size: var(--type-scale-n{{ settings.desktop_secondary_heading_scale }});
      --section-vertical-spacing: {{ vertical_spacing_between_sections[1] }};
      --section-x-padding: 2.5rem;
      --grid-gap: 2.5rem;
    }
  }

  .heading-standard {
    font-size: var(--standard-heading-size);
  }

  .heading-feature {
    font-size: var(--feature-heading-size);
  }

  .heading-secondary {
    font-size: var(--secondary-heading-size);
  }

  /*
  Rich Text Editor
  */
  {%- liquid
    case settings.rich_text_links_color
      when 'text'
        assign rich_text_links_color = 'var(--color-scheme-text)'
        assign rich_text_links_color_contrast = 'var(--color-scheme-background)'
        assign rich_text_links_hover_color = 'var(--color-scheme-accent-1)'
      when 'accent_1'
        assign rich_text_links_color = 'var(--color-scheme-accent-1)'
        assign rich_text_links_color_contrast = 'var(--color-scheme-accent-1-contrast)'
        assign rich_text_links_hover_color = 'var(--color-scheme-text)'
      when 'accent_2'
        assign rich_text_links_color = 'var(--color-scheme-accent-2)'
        assign rich_text_links_color_contrast = 'var(--color-scheme-accent-2-contrast)'
        assign rich_text_links_hover_color = 'var(--color-scheme-text)'
      else
        assign rich_text_links_color = 'var(--color-scheme-text)'
        assign rich_text_links_color_contrast = 'var(--color-scheme-text-contrast)'
        assign rich_text_links_hover_color = 'var(--color-scheme-accent-1)'
    endcase

    case settings.rich_text_blockquotes_background_color
      when 'text'
        assign rich_text_blockquotes_background_color = 'var(--color-scheme-text)'
        assign rich_text_blockquotes_text_color = 'var(--color-scheme-background)'
      when 'accent_1'
        assign rich_text_blockquotes_background_color = 'var(--color-scheme-accent-1)'
        assign rich_text_blockquotes_text_color = 'var(--color-scheme-accent-1-contrast)'
      when 'accent_2'
        assign rich_text_blockquotes_background_color = 'var(--color-scheme-accent-2)'
        assign rich_text_blockquotes_text_color = 'var(--color-scheme-accent-2-contrast)'
      when 'transparent'
        assign rich_text_blockquotes_background_color = 'transparent'
        assign rich_text_blockquotes_text_color = 'var(--color-scheme-text)'
    endcase
  -%}

  :root,
  [data-color-scheme] {
    --rte-spacing: 1.25rem;
    --rte-link-color: {{ rich_text_links_color }};
    --rte-link-color-contrast: {{ rich_text_links_color_contrast }};
    --rte-link-hover-color: {{ rich_text_links_hover_color }};
    --rte-blockquote-background-color: {{ rich_text_blockquotes_background_color }};
    --rte-blockquote-text-color: {{ rich_text_blockquotes_text_color }};
    --rte-list-style-type: {{ settings.rich_text_list_style }};
    --underline-thickness: {{ settings.underline_thickness }}px;
    --rte-link-decoration-style: {{ settings.underline_style }};
  }

  .rte a,
  .inline-rte a {
    text-decoration-line: underline;
    text-decoration-style: var(--rte-link-decoration-style);
    text-decoration-thickness: var(--underline-thickness);
    color: rgb(var(--rte-link-color));
  }

  .rte a:hover,
  .inline-rte a:hover {
    color: rgb(var(--rte-link-hover-color));
  }

  .inline-heading-rte a {
    text-decoration-line: underline;
    text-decoration-style: var(--rte-link-decoration-style);
    text-decoration-thickness: var(--underline-thickness);
  }

  .heading-effects a {
    text-decoration-line: unset;
    text-decoration-style: unset;
    text-decoration-thickness: unset;
  }


  /*
  Heading effects
  */
  {%- liquid
    case settings.heading_italics_color
      when 'color-scheme-text'
        assign italic_highlight_color = 'rgba(var(--color-scheme-text), 1)'
        assign italic_highlight_contrast_color = 'var(--color-scheme-text-contrast)'
      when 'color-scheme-accent-1'
        assign italic_highlight_color = 'rgba(var(--color-scheme-accent-1), 1)'
        assign italic_highlight_contrast_color = 'var(--color-scheme-accent-1-contrast)'
      when 'color-scheme-accent-2'
        assign italic_highlight_color = 'rgba(var(--color-scheme-accent-2), 1)'
        assign italic_highlight_contrast_color = 'var(--color-scheme-accent-2-contrast)'
    endcase
  -%}

  :root {
    --heading-highlight-start: {{ settings.heading_highlight_start }}%;
    --heading-highlight-end: {{ settings.heading_highlight_end }}%;
    --heading-highlight-opacity-0: rgba(255,255,255,0);
    --color-heading-highlight: {{ italic_highlight_color }};
    --color-heading-highlight-text: {{ italic_highlight_contrast_color }};
    --heading-text-highlight: linear-gradient(180deg, var(--heading-highlight-opacity-0) var(--heading-highlight-start), var(--color-heading-highlight) var(--heading-highlight-start), var(--color-heading-highlight) var(--heading-highlight-end), var(--heading-highlight-opacity-0) var(--heading-highlight-end));
  }

  {% if settings.heading_effects_style == 'border_shadow' %}
    .heading-effects,
    .heading-effects a
    {% if settings.apply_to_standard_headings %}, .heading-standard, .heading-standard a{% endif %}
    {% if settings.apply_to_feature_headings %}, .heading-feature, .heading-feature a{% endif %} {
      color: rgb(var(--heading-color));
      text-shadow: var(--heading-text-shadow);
      -webkit-text-stroke: var(--heading-stroke-thickness) rgb(var(--color-heading-stroke));
      text-stroke: var(--heading-stroke-thickness) rgb(var(--color-heading-stroke));
      text-decoration: none;
    }
  {% else %}
    /* Italic styling */

    .heading-effects,
    .heading-effects a
    {% if settings.apply_to_standard_headings %}, .heading-standard, .heading-standard a{% endif %}
    {% if settings.apply_to_feature_headings %}, .heading-feature, .heading-feature a{% endif %} {
      text-decoration: none;
    }

    .feature-text.heading-effects i,
    .feature-text.heading-effects em
    {% if settings.apply_to_standard_headings %}, .heading-standard.inline-heading-rte i, .heading-standard.inline-heading-rte em{% endif %}
    {% if settings.apply_to_feature_headings %}, .heading-feature.inline-heading-rte i, .heading-feature.inline-heading-rte em{% endif %} {
      font-style: {{ settings.heading_italics_style }};
      color: rgb(var(--heading-italics-color));
    }

    {% if settings.heading_italics_decoration == 'highlight' %}
      .feature-text.heading-effects i,
      .feature-text.heading-effects em
      {% if settings.apply_to_standard_headings %}, .heading-standard.inline-heading-rte i, .heading-standard.inline-heading-rte em{% endif %}
      {% if settings.apply_to_feature_headings %}, .heading-feature.inline-heading-rte i, .heading-feature.inline-heading-rte em{% endif %} {
        position: relative;
        display: inline;
        background: var(--heading-text-highlight);
        color: rgb(var(--color-heading-highlight-text));
        margin-inline: auto;
        padding-inline: 0.25ch;
        -webkit-box-decoration-break: clone;
        box-decoration-break: clone;
        z-index: -1;
      }
    {% endif %}
  {% endif %}

