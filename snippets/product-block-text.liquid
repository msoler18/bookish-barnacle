<div
  class="{{ block_base_classes }} text-sm {% if block.settings.icon != 'none' %}flex items-center justify-start{% endif %}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.icon != 'none' %}
    <span class="mr-2 inline-block h-8 w-8">
      {% render 'theme-icon', icon: block.settings.icon %}
    </span>
  {% endif %}
  {{ block.settings.text }}
</div>
