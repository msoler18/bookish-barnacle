<li
  class="{% if section.settings.display_on_card %}card{% else %}{% endif %}"
  {{ block.shopify_attributes }}
>
  <div
    class="{% if section.settings.display_on_card %}card__surface p-4{% else %}border-scheme-text border-t-2 py-4{% endif %}"
    x-data="{ open: false }"
    x-cloak
  >
    <{{ block_heading_level }} class="">
      <button
        @click="open = !open"
        class="{% if section.settings.heading_text_style == 'heading' %}font-heading heading-secondary{% endif %} flex w-full cursor-pointer items-center justify-between text-left"
        :aria-expanded="open ? true : 'false'"
      >
        <div class="flex w-10/12 grow-0 items-center lg:w-11/12">
          {%- unless block.settings.icon == 'none' -%}
            <span class="mr-2 h-8 w-8 shrink-0">
              {% render 'theme-icon', icon: block.settings.icon %}
            </span>
          {%- endunless -%}
          <span class="break-words">
            {{ block.settings.title }}
          </span>
        </div>
        <div class="block flex-shrink-0 pl-5">
          <span
            class="inline-block h-5 w-5 origin-center transform transition"
            :class="{'rotate-180': open }"
          >
            {%- render 'icon-chevron-down' -%}
          </span>
        </div>
      </button>
    </{{ block_heading_level }}>
    <div class="rte mt-4" x-show="open" id="{{ block.id }}">
      {{ block.settings.answer }}
    </div>
  </div>

  <noscript>
    <div class="rte mt-8">
      <h2 class="heading-standard"></h2>
      {{ block.settings.answer }}
    </div>
  </noscript>
</li>
