<div
  class="{{ block_base_classes }}"
  {{ block.shopify_attributes }}
>
  <div class="comparison-chart flex items-center items-center justify-start">
    <h4 class="w-1/5 shrink-0 text-sm {% if block.settings.uppercase_text %}uppercase{%  endif %}">
      {{ block.settings.label }}
    </h4>
    {%- liquid
      assign value = block.settings.value
      if block.settings.value_alt != blank
        assign value = block.settings.value_alt
      endif
    -%}
    <div class="relative flex-1" aria-label="{{ value }}%">
      <div
        class="relative h-chart rounded-full border-general border-scheme-text bg-scheme-accent-1"
        style="width: {{ value }}%"
      ></div>
    </div>
  </div>
</div>
