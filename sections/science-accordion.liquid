<style>
  .rte ul li::before {
    background-image: url('{{ "icon-check.svg" | asset_url }}');
  }
</style>

<section class="science-accordion" style="background-color: {{ section.settings.background_color }}">
  <div class="container">
    <h2 class="science-accordion__title">{{ section.settings.heading }}</h2>

    {% if section.settings.subtitle != blank %}
      <p class="science-accordion__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="science-accordion__divider"></div>

    <div class="science-accordion__items">
      {% if section.blocks.size > 0 %}
        <div class="science-accordion__titles">
          {% for block in section.blocks %}
            <h3
              class="science-accordion__item-title {% if forloop.index0 == 0 %}is-active{% endif %}"
              data-accordion-trigger
              data-index="{{ forloop.index0 }}"
            >
              {{ block.settings.title }}
            </h3>
          {% endfor %}
        </div>

        <div class="science-accordion__contents">
          {% for block in section.blocks %}
            <div
              class="science-accordion__item-content {% if forloop.index0 == 0 %}is-active{% endif %}"
              data-accordion-content
              data-content-index="{{ forloop.index0 }}"
            >
              <div class="rte">
                {{ block.settings.content }}
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No hay items configurados aún.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Science Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título del Item"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Contenido"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Accordion"
    }
  ]
}
{% endschema %}
