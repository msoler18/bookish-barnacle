{%- comment -%}
  Custom Footer Section
{%- endcomment -%}

<footer
  class="custom-footer text-center py-6"
  style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};"
>

  <div class="footer__separator">
    {% if section.settings.separator_image %}
      {% render 'render-image',
        class: "w-full block",
        img: section.settings.separator_image,
        alt: section.settings.separator_alt,
        width: "1200",
        height: "auto",
        size: "400 800 1200"
      %}
    {% endif %}
  </div>
  
  <div class="footer-logo mb-6">
    {% if section.settings.logo_image %}
      {% render 'render-image',
        class: "mx-auto block",
        img: section.settings.logo_image,
        alt: section.settings.logo_alt,
        width: "600",
        height: "auto",
        size: "200 400 600"
      %}
    {% endif %}
  </div>

  <div class="footer-menus{% unless section.settings.show_menus %}hidden{% endunless %}">

    <div class="footer-menus--left">

      {% if section.settings.menu_left %}
        <ul class="list-none">
          {% for link in linklists[section.settings.menu_left].links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="hover:underline" style="color: {{ section.settings.text_color }};">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.contact_email %}
        <div class="contact">
          <span class="contact__label">{{ section.settings.contact_label }}</span>
          <a href="mailto:{{ section.settings.contact_email }}" class="contact__email hover:underline" style="color: {{ section.settings.text_color }};">
            {{ section.settings.contact_email }}
          </a>
        </div>
      {% endif %}

    </div>

    <div class="footer-menus--right">
  
      {% if section.settings.menu_right %}
        <ul class="list-none">
          {% for link in linklists[section.settings.menu_right].links %}
            <li class="mb-2">
              <a href="{{ link.url }}" class="hover:underline" style="color: {{ section.settings.text_color }};">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.policies_menu %}
        <div class="policies-menu">
          <ul class="list-none p-0 m-0 space-x-6">
            {% for link in linklists[section.settings.policies_menu].links %}
              <li>
                <a href="{{ link.url }}" class="hover:underline" style="color: {{ section.settings.text_color }};">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

    </div>
    
  </div>


  {% if section.settings.copyright_text %}
    <div class="copyright mt-6 text-sm" style="color: {{ section.settings.text_color }};">
      {{ section.settings.copyright_text }}
    </div>
  {% endif %}
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "separator_image",
      "label": "Imagen separador (wave)"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu_left",
      "label": "Menú izquierdo"
    },
    {
      "type": "link_list",
      "id": "menu_right",
      "label": "Menú derecho"
    },
    {
      "type": "checkbox",
      "id": "show_menus",
      "label": "Mostrar menús",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_label",
      "label": "Etiqueta de contacto",
      "default": "Hablemos:"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email de contacto",
      "default": "contacto@ravekit.co"
    },
    {
      "type": "link_list",
      "id": "policies_menu",
      "label": "Menú Políticas (Términos, Devoluciones, Tratamiento de datos)"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de copyright",
      "default": "© Ravekit 2024. Todos los derechos reservados"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#7F0EEC"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Footer Ravekit"
    }
  ]
}
{% endschema %}
