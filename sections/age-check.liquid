{%- if section.settings.enable or request.design_mode -%}
  <data-island
    x-data="
      AgeCheck({
        mode: {{ section.settings.mode | json | escape }},
        dateFormat: {{ section.settings.date_format | json | escape }},
        minimumAge: {{ section.settings.minimum_age | json | escape }},
        redirectUrl: {{ section.settings.redirect_link | json | escape }},
        enabled: {{ section.settings.enable | default: false }}
      })
    "
    role="banner"
    on="idle"
  >
    <div>
      <template data-should-teleport="#modal-slot">
        <template x-if="$store.modals.modal.contents === 'ageCheck'">
          <div
            class="flex h-full w-full overflow-y-auto bg-scheme-background {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %} px-section py-section-vertical-spacing"
            data-modal-label="{{ section.settings.title | strip_html }}"
            data-color-scheme="{{ section.settings.color_scheme }}"
          >
            {%- if section.settings.background_image != blank %}
              {{
                section.settings.background_image
                | image_url: width: 2000
                | image_tag:
                  class: 'block absolute inset-0 w-full h-full object-cover z-0',
                  loading: 'lazy'
              }}
            {%- endif -%}
            {%- liquid
              for block in section.blocks
                case block.type
                  when 'background_shape'
                    render 'block-background-shape', block: block
                  when 'background_pattern'
                    render 'block-background-pattern', block: block, scheme: section.settings.color_scheme
                endcase
              endfor
            -%}
            {%- assign stickers = section.blocks | where: 'type', 'sticker' -%}
            {%- liquid
              for sticker in stickers
                render 'block-sticker', block: sticker
              endfor
            -%}
            <div
              class="relative z-10 m-auto w-fit max-w-site {% if section.settings.display_on_card %}card{% endif %}"
            >
              <div class="{% if section.settings.display_on_card %}card__surface p-5 lg:p-10{% endif %} section-content relative z-10 mx-auto space-y-5 text-center">
                {%- assign logo = section.settings.logo -%}
                {% if logo != blank %}
                  {% capture image_size %}{{ section.settings.logo_max_width | escape }}x{% endcapture %}
                  {% # theme-check-disable VariableName %}
                  {% # https://github.com/Shopify/theme-tools/issues/397 %}
                  {% capture image_size_2x %}{{ section.settings.logo_max_width | times: 2 }}x{% endcapture %}
                  {% # theme-check-enable VariableName %}
                  <img
                    src="{{ logo | image_url: width: image_size }}"
                    srcset=" {{- logo | image_url: width: image_size | append: ' 1x,' -}} {{- logo | image_url: width: image_size_2x | append: ' 2x' -}}"
                    loading="eager"
                    class="inline w-auto"
                    width="{{ logo.width }}"
                    height="{{ logo.height }}"
                    alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
                  >
                {% endif %}
                {% if section.settings.title != '' %}
                  <h2
                    class="inline-heading-rte font-heading heading-standard heading-style {{ settings.heading_drop_shadow_style }}"
                  >
                    {{ section.settings.title }}
                  </h2>
                {% endif %}
                {%- if section.settings.text != '' -%}
                  <div class="inline-rte mx-auto font-main leading-snug">
                    {{ section.settings.text }}
                  </div>
                {%- endif -%}
                {%- case section.settings.mode -%}
                  {%- when 'buttons' -%}
                    <div class="grid grid-cols-12 gap-5">
                      <div class="col-span-6">
                        <button
                          @click="approveEntry"
                          role="button"
                          class="push-btn w-full"
                        >
                          <span class="push-btn__surface push-btn__surface--secondary w-full">
                            {{- section.settings.yes_button_text -}}
                          </span>
                        </button>
                      </div>
                      <div class="col-span-6">
                        <button
                          @click="denyEntry"
                          role="button"
                          class="push-btn w-full"
                        >
                          <span class="push-btn__surface push-btn__surface--secondary w-full">
                            {{- section.settings.no_button_text -}}
                          </span>
                        </button>
                      </div>
                    </div>
                  {%- when 'dob' -%}
                    {%- capture day_input -%}
                    <div class="input-container w-full">
                      <label class="visually-hidden" for="age-check-day">{{ 'age_check.day' | t }}</label>
                      <input
                        type="tel"
                        maxlength="2"
                        id="age-check-day"
                        name="day"
                        class="w-full text-center placeholder:text-scheme-text"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        placeholder="DD"
                        required
                        x-ref="day"
                        x-model="day"
                      >
                    </div>
                  {%- endcapture -%}
                    {%- capture month_input -%}
                    <div class="input-container w-full">
                      <label class="visually-hidden" for="month" id="age-check-month">{{ 'age_check.month' | t }}</label>
                      <input
                        type="tel"
                        maxlength="2"
                        id="age-check-month"
                        name="month"
                        class="w-full text-center placeholder:text-scheme-text"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        placeholder="MM"
                        x-ref="month"
                        x-model="month"
                        required
                      >
                    </div>
                  {%- endcapture -%}
                    <div
                      class="dob-form mx-auto grid max-w-xs grid-cols-12 gap-2"
                      id="dob-form-{{ section.id }}"
                    >
                      {%- if section.settings.date_format == 'dd-mm-yyyy' -%}
                        <div class="input-grid-item col-span-4">
                          {{ day_input }}
                        </div>
                        <div class="input-grid-item col-span-4">
                          {{ month_input }}
                        </div>
                      {%- else -%}
                        <div class="input-grid-item col-span-4">
                          {{ month_input }}
                        </div>
                        <div class="input-grid-item col-span-4">
                          {{ day_input }}
                        </div>
                      {%- endif -%}
                      <div class="input-grid-item col-span-4">
                        <div class="input-container">
                          <label class="visually-hidden" for="age-check-year">
                            {{- 'age_check.year' | t -}}
                          </label>
                          <input
                            type="tel"
                            maxlength="4"
                            name="year"
                            id="age-check-year"
                            class="w-full text-center placeholder:text-scheme-text"
                            autocorrect="off"
                            autocapitalize="off"
                            autocomplete="email"
                            placeholder="YYYY"
                            required
                            x-ref="year"
                            x-model="year"
                          >
                        </div>
                      </div>
                    </div>
                {%- endcase -%}
              </div>
            </div>
          </div>
        </template>
      </template>
    </div>
  </data-island>
{%- endif -%}

