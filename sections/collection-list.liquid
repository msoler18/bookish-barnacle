<!-- sections/gallery.liquid -->
<section
  class="gallery relative overflow-hidden bg-scheme-background text-scheme-text  {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}"
  data-color-scheme="{{ section.settings.color_scheme }}"
>
  <div class="section-content z-10 px-section py-section-vertical-spacing">
    {% unless section.settings.title == blank %}
      <div class="mx-auto max-w-site">
        <h2 class="inline-heading-rte font-heading heading-standard  heading-style break-words text-center {{ settings.heading_drop_shadow_style }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {% endunless %}

    <div class="mx-auto grid max-w-site grid-flow-row-dense lg:grid lg:auto-rows-auto lg:grid-cols-12 {% if section.settings.title != '' %}section-content-top-margin{% endif %} gap-theme">
      {%- liquid
        assign collections = section.blocks | where: 'type', 'collection'
        assign image_count = 0
      %}
      {% for block in collections %}
        {% unless block.type == 'sticker'
          or block.type == 'background_pattern'
          or block.type == 'background_shape'
          or block.type == 'shape_divider'
        %}
          {%- liquid
            assign image_count = image_count | plus: 1

            if section.index == 1 and forloop.first and section.settings.first_large_image_position == 'top_left' or collections.size == 2
              assign preload = true
            elsif section.index == 1 and image_count == 3 and section.settings.first_large_image_position == 'top_right'
              assign preload = true
            else
              assign preload = false
            endif

            if section.index <= 3 and image_count <= 3
              assign loading = 'eager'
            else
              assign loading = 'lazy'
            endif

            assign default_label = 'homepage.onboarding.collection_title' | t
            assign collection = block.settings.collection
            assign url = collection.url
            assign image = collection.image | default: collection.products.first.featured_image
            assign button_text = collection.title | default: default_label

            if collections.size == 2
              assign grid_item_size = 'col-span-full lg:col-span-6'
              assign sizes = '(min-width: 990px) 50vw, 100vw'
            else
              capture grid_item_size
                if section.settings.first_large_image_position == 'top_left'
                  cycle 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4 lg:row-start-4', 'col-span-2 lg:col-span-8 lg:row-span-2'
                else
                  cycle 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4 lg:row-start-2', 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4'
                endif
              endcapture

              assign large_item_sizes = '(min-width: 990px) calc(100vw / 12 * 8), 100vw'
              assign item_sizes = '(min-width: 990px) calc(100vw / 12 * 4), 50vw'

              capture sizes
                if section.settings.first_large_image_position == 'top_left'
                  cycle large_item_sizes, item_sizes, item_sizes, item_sizes, item_sizes, large_item_sizes
                else
                  cycle item_sizes, item_sizes, large_item_sizes, large_item_sizes, item_sizes, item_sizes
                endif
              endcapture
            endif
          -%}

          <div
            class="gallery-item relative flex items-center justify-center {{ grid_item_size }}"
            {{ block.shopify_attributes }}
          >
            <a href="{{ url }}" class="group block w-full">
              {%- render 'shape-defs',
                shape: block.settings.image_shape,
                shape_id: block.id,
                index: forloop.index0
              -%}

              {%- if image != blank -%}
                <div class="w-full">
                  {%- render 'media-image',
                    media: image,
                    shape_id: block.id,
                    shape: block.settings.image_shape,
                    crop: section.settings.crop,
                    is_card: false,
                    rotate: block.settings.rotate_image,
                    container_id: section.id,
                    index: forloop.index0,
                    preload: preload,
                    loading: loading,
                    sizes: sizes
                  -%}
                </div>
              {%- else -%}
                <div class="w-full">
                  {%- render 'media-image-placeholder',
                    container_id: block.id,
                    shape_id: block.id,
                    shape: block.settings.image_shape,
                    crop: block.settings.crop,
                    rotate: block.settings.rotate_image,
                    is_card: false
                  -%}
                </div>
              {%- endif -%}

              {%- if button_text != blank -%}
                <div class="{% if section.settings.show_buttons_on_mobile %}flex{% else %}hidden lg:flex{% endif %}  gallery-item__content absolute bottom-0 left-0 right-0 top-0  z-10 items-center justify-center px-5 text-center text-scheme-text  {% if section.settings.only_show_button_on_hover %}lg:opacity-0 group-hover:lg:opacity-100 transition duration-200 ease-in-out{% endif %}">
                  <span class="push-btn  inline-block break-words text-center">
                    <span class="{{ section.settings.button_style }}">
                      {{- button_text -}}
                    </span>
                  </span>
                </div>
              {%- endif -%}
            </a>
          </div>
        {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape', block: block
        when 'background_pattern'
          render 'block-background-pattern', block: block, scheme: section.settings.color_scheme
      endcase
    endfor
  -%}
</section>

{%- liquid
  assign stickers = section.blocks | where: 'type', 'sticker'
  assign shape_dividers = section.blocks | where: 'type', 'shape_divider'
  for sticker in stickers
    render 'block-sticker', block: sticker
  endfor
  for shape_divider in shape_dividers
    render 'block-shape-divider', block: shape_divider
  endfor
-%}

