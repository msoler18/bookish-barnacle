<script>
function showSelectedPlan() {
  const selectedValue = document.getElementById('subscription-dropdown').value;

  // Ocultar todos los contenedores
  document.querySelectorAll('.mobile-images-container').forEach(container => {
    container.classList.remove('active');
  });

  // Mostrar solo el contenedor seleccionado
  const selectedContainer = document.getElementById(selectedValue);
  if (selectedContainer) {
    selectedContainer.classList.add('active');
  }
}

// Mostrar el primer plan (quincenal) por defecto al cargar
document.addEventListener('DOMContentLoaded', () => {
  document.getElementById('quincenal').classList.add('active');
});
</script>