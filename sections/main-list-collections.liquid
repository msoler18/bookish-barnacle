{%- liquid
  assign items = collections
  assign block_collections = section.blocks | where: 'type', 'collection'
  if block_collections.size > 0
    assign using_blocks = true
    assign items = block_collections
  endif
-%}

{%- paginate collections by 6 -%}
  <section
    class="relative overflow-hidden bg-scheme-background py-section-vertical-spacing text-scheme-text {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}"
    data-color-scheme="{{ section.settings.color_scheme }}"
  >
    <div class="space-y-double-section-vertical-spacing">
      {% for item in items %}
        {%- liquid
          assign collection = item
          assign image_shape = section.settings.image_shape
          if using_blocks
            assign collection = item.settings.collection
            if item.settings.image_shape != 'same_as_section'
              assign image_shape = item.settings.image_shape
            else
              assign image_shape = settings.product_tile_media_shape
            endif
          endif
        -%}
        <div class="section-content relative z-10 {% unless section.settings.layout == 'carousel' %}px-section max-w-site mx-auto{% endunless %}">
          <h2 class="font-heading heading-standard  heading-style break-words text-center {{ settings.heading_drop_shadow_style }}">
            {{ collection.title }}
          </h2>
          {%- if collection.description != blank
            and section.settings.show_collection_description
          -%}
            <div class="rte mx-auto mt-5 max-w-lg text-center">
              {{ collection.description }}
            </div>
          {%- endif -%}
          {%- render 'featured-collection',
            item: section,
            collection: collection,
            index: forloop.index,
            image_shape: image_shape
          -%}
        </div>
      {% endfor %}
    </div>

    {%- unless using_blocks -%}
      {%- if paginate.pages > 1 -%}
        <div class="mx-auto max-w-site px-section pt-section-vertical-spacing">
          {%- render 'pagination', paginate: paginate, anchor: '' -%}
        </div>
      {%- endif -%}
    {%- endunless %}

    {%- liquid
      for block in section.blocks
        case block.type
          when 'background_shape'
            render 'block-background-shape', block: block
          when 'background_pattern'
            render 'block-background-pattern', block: block, scheme: section.settings.color_scheme
          when 'shape_divider'
            render 'block-shape-divider', block: block
        endcase
      endfor
    -%}
  </section>
{%- endpaginate -%}

{%- assign stickers = section.blocks | where: 'type', 'sticker' -%}
{%- liquid
  for sticker in stickers
    render 'block-sticker', block: sticker
  endfor
-%}

