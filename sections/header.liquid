{% style %}
  .header {
    background-color: {{ section.settings.header_bg }};
  }
{% endstyle %}

<header class="header {% if section.settings.header_sticky %}header--sticky{% endif %}">
  <div class="container header__container">
    <a href="/" class="header__logo">
      {% if section.settings.logo != blank %}
        <img
          src="{{ section.settings.logo | image_url }}"
          alt="{{ shop.name }}"
          width="120"
          height="auto"
        />
      {% else %}
        <span>{{ shop.name }}</span>
      {% endif %}
    </a>
    <a href="{{ routes.cart_url }}" class="header__cart">
      {% render 'icon-cart' %}
    </a>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header Background",
      "default": "#000000"
    }
  ]
}
{% endschema %}
