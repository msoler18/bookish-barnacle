{%- liquid
  assign collection = section.settings.collection
  assign shape_id = section.id
  assign total_mobile_items = section.settings.no_mobile_grid_items
  assign total_desktop_items = section.settings.no_desktop_grid_items | minus: 1

  if section.settings.no_mobile_grid_items > 8
    assign number_of_mobile_columns = 3
    assign mobile_grid_class = 'grid-cols-3'
    assign mobile_sizes = '33.33vw'
  else
    assign number_of_mobile_columns = 2
    assign mobile_grid_class = 'grid-cols-2'
    assign mobile_sizes = '50vw'
  endif

  if section.settings.no_desktop_grid_items > 20
    assign number_of_desktop_columns = 5
    assign desktop_grid_class = 'lg:grid-cols-5'
    assign desktop_sizes = '20vw'
  else
    assign number_of_desktop_columns = 6
    assign desktop_grid_class = 'lg:grid-cols-6'
    assign desktop_sizes = '16.67vw'
  endif

  assign sizes = '(min-width: 990px) ' | append: desktop_sizes | append: ', ' | append: mobile_sizes

  if collection != blank
    assign item_count = collection.products_count
  else
    assign item_count = 5
  endif
-%}

{%- render 'collection-shape-defs',
  shape: section.settings.image_shape,
  section_id: shape_id,
  item_count: item_count
-%}

<section
  class="relative overflow-hidden bg-scheme-background text-scheme-text {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %} full-bleed-section"
  data-color-scheme="{{ section.settings.color_scheme }}"
>
  <div class="offset-gallery-container {{ section.settings.height }} relative z-10 overflow-hidden">
    <div
      id="FeatureGallery-{{ section.id }}"
      class="grid {{ mobile_grid_class }}  {{ desktop_grid_class }} absolute left-1/2 top-1/2 w-full gap-theme"
    >
      {%- if collection != blank %}
        {% for i in (0..total_desktop_items) %}
          {%- liquid
            assign index = i | modulo: item_count
            if section.settings.image_shape == 'blob'
              assign shape_id = section.id | append: '-' | append: index
            endif
            assign product = collection.products[index]
            capture mobile_class
              case number_of_mobile_columns
                when 2
                  cycle '', 'max-lg:-translate-y-1/2'
                when 3
                  cycle '', 'max-lg:-translate-y-1/2', ''
              endcase
            endcapture

            capture desktop_class
              case number_of_desktop_columns
                when 3
                  cycle '', 'lg:-translate-y-1/2', ''
                when 4
                  cycle '', 'lg:-translate-y-1/2'
                when 6
                  cycle '', 'lg:-translate-y-1/2'
                when 5
                  cycle '', 'lg:-translate-y-1/2', '', 'lg:-translate-y-1/2', ''
              endcase
            endcapture
          -%}

          {%- liquid
            assign loading = 'lazy'
            if section.index <= 3
              assign loading = 'eager'
            endif

            assign preload = false
            if section.index == 1 and forloop.first
              assign preload = true
            endif
          -%}

          <div
            x-data="OffsetGalleryItem"
            class="{{ mobile_class }} {{ desktop_class }} gallery-item relative {% if forloop.index > total_mobile_items %}hidden lg:block{% endif %}"
          >
            <a
              @focus="focused"
              :tabindex="tabIndex"
              href="{{ product.url }}"
              class="group block  transform transition duration-200 ease-in-out hover:scale-110"
            >
              <div class="relative w-full">
                {%- render 'media-image',
                  media: product.featured_image,
                  shape_id: shape_id,
                  shape: section.settings.image_shape,
                  crop: section.settings.crop,
                  is_card: false,
                  container_id: section.id,
                  index: forloop.index0,
                  loading: loading,
                  preload: preload,
                  sizes: sizes
                -%}
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (0..total_desktop_items) -%}
          {%- liquid
            assign index = i | modulo: item_count
            if section.settings.image_shape == 'blob'
              assign shape_id = section.id | append: '-' | append: index
            endif

            capture mobile_class
              case number_of_mobile_columns
                when 2
                  cycle '', 'max-lg:-translate-y-1/2'
                when 3
                  cycle '', 'max-lg:-translate-y-1/2', ''
              endcase
            endcapture

            capture desktop_class
              case number_of_desktop_columns
                when 3
                  cycle '', 'lg:-translate-y-1/2', ''
                when 4
                  cycle '', 'lg:-translate-y-1/2'
                when 6
                  cycle '', 'lg:-translate-y-1/2'
                when 5
                  cycle '', 'lg:-translate-y-1/2', '', 'lg:-translate-y-1/2', ''
              endcase
            endcapture
          -%}
          <div
            x-data="OffsetGalleryItem"
            class="{{ mobile_class }} {{ desktop_class }} gallery-item relative"
          >
            <a
              :tabindex="tabIndex"
              class="group block  transform transition duration-200 ease-in-out hover:scale-105"
            >
              <div class="relative w-full">
                {%- render 'media-image-placeholder',
                  container_id: section.id,
                  shape_id: shape_id,
                  shape: section.settings.image_shape,
                  crop: section.settings.crop,
                  is_card: false
                -%}
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape', block: block
        when 'background_pattern'
          render 'block-background-pattern', block: block, scheme: section.settings.color_scheme
      endcase
    endfor
  -%}
</section>

{%- liquid
  assign stickers = section.blocks | where: 'type', 'sticker'
  assign shape_dividers = section.blocks | where: 'type', 'shape_divider'
  for sticker in stickers
    render 'block-sticker', block: sticker
  endfor
  for shape_divider in shape_dividers
    render 'block-shape-divider', block: shape_divider, no_padding: true
  endfor
-%}

<style>
  #FeatureGallery-{{ section.id }} {
    transform: translate(-50%, -50%) scale({{ section.settings.zoom_level }})  rotate({{ section.settings.rotate }}deg);
  }
</style>

