<div
  class="section-content px-section py-section-vertical-spacing"
  data-color-scheme="scheme1"
>
  <div class="card mx-auto max-w-md">
    <div class="card__surface relative z-shape-divider mx-auto bg-scheme-card p-5 text-left lg:p-10">
      <h1 class="font-heading heading-standard mb-2.5">
        {{ 'customer.register.title' | t }}
      </h1>
      {%- assign form_id = 'RegisterForm' -%}
      {% form 'create_customer', id: form_id %}
        {% if form.errors %}
          <div class="mt-5" tabindex="-1">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <label for="FirstName" class="font-secondary mb-1 mt-5 block text-sm">
          {{ 'customer.register.first_name' | t }}
        </label>
        <input
          type="text"
          class="w-full"
          name="customer[first_name]"
          id="FirstName"
          {% unless form.errors %}
            autofocus
          {% endunless %}
          {% if form.first_name %}
            value="{{ form.first_name }}"
          {% endif %}
        >

        <label for="LastName" class="font-secondary mb-1 mt-5 block text-sm">
          {{ 'customer.register.last_name' | t }}
        </label>
        <input
          type="text"
          class="w-full"
          name="customer[last_name]"
          id="LastName"
          {% if form.last_name %}
            value="{{ form.last_name }}"
          {% endif %}
        >

        <label for="Email" class="font-secondary mb-1 mt-5 block text-sm">
          {{ 'customer.register.email' | t }}
        </label>
        <input
          type="email"
          name="customer[email]"
          id="Email"
          class="w-full {% if form.errors contains 'email' %}border-scheme-accent-1{% endif %}"
          value="{% if form.email %}{{ form.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off"
        >

        <label
          for="CreatePassword"
          class="font-secondary mb-1 mt-5 block text-sm"
        >
          {{ 'customer.register.password' | t }}
        </label>
        <input
          type="password"
          class="w-full {% if form.errors contains 'password' %}border-scheme-accent-1{% endif %}"
          name="customer[password]"
          id="CreatePassword"
        >

        <div class="mt-5">
          <button type="submit" class="push-btn w-full">
            <span class="push-btn__surface w-full">
              {{- 'customer.register.submit' | t -}}
            </span>
          </button>
        </div>

        <div class="text-center">
          <a
            class="mt-5 inline-block text-sm"
            href="{{ routes.account_login_url }}"
          >
            {{ 'customer.login.sign_in' | t }}
          </a>
        </div>
      {% endform %}
    </div>
  </div>
</div>
